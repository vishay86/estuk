<%= simple_form_for(@book, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :name , required: true, label: false , placeholder: 'Name' %>
    <%= f.input :author, required: true, label: false , placeholder: 'Author Name' %>
    <%= f.input :description, required: true, label: false , placeholder: 'Book Description',  input_html: {rows: 5} %>
    <%= f.input :price, required: true, label: false , placeholder: 'Price' %>
    <%= f.input :availability %>
 

  
    <%= f.button :submit, class: 'btn btn-success btn-block' %>
  
<% end %>
